<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avator_lay"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avator_iv"
            android:layout_width="@dimen/dp_60"
            android:src="@drawable/follow_sub_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_height="@dimen/dp_60"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="一科"
            app:layout_constraintTop_toTopOf="@+id/avator_iv"
            app:layout_constraintLeft_toRightOf="@+id/avator_iv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/avator_iv"
            app:layout_constraintLeft_toRightOf="@+id/avator_iv"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="1个智能设备"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_height="wrap_content"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_corner_white"
        app:layout_constraintTop_toBottomOf="@+id/avator_lay"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/std_person_center_icon_share"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="家庭管理"
                app:layout_constraintLeft_toRightOf="@+id/icon1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/homepage_dashboard_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_bg"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_height="0.5dp"></View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/std_person_center_icon_share"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="消息中心"
                app:layout_constraintLeft_toRightOf="@+id/icon2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/homepage_dashboard_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_bg"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_height="0.5dp"></View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/std_person_center_icon_share"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="意见与反馈"
                app:layout_constraintLeft_toRightOf="@+id/icon3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/homepage_dashboard_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_bg"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_height="0.5dp"></View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/std_person_center_icon_share"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="更多服务"
                app:layout_constraintLeft_toRightOf="@+id/icon4"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/homepage_dashboard_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/top_lay"
        android:background="@drawable/shape_corner_white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/std_person_center_icon_share"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="设置"
            app:layout_constraintLeft_toRightOf="@+id/share"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/homepage_dashboard_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>