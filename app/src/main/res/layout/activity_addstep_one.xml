<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_30"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/dp_70"
            android:src="@drawable/miuisupport_action_bar_back_normal_light"
            android:layout_height="@dimen/dp_70"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="一科万能遥控器"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>


    <include
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        layout="@layout/view_divider"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/action_bar"
        ></include>


    <TextView
        android:id="@+id/summary_tv"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_120"
        android:text="接通电源，长按底部复位键5秒左右，待指示灯闪烁\n注意：重置设备后，请在三分钟内完成配网操作"
        android:textSize="@dimen/sp_34"
        android:textColor="#4E4E4E"
        android:lineSpacingExtra="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/apnet_iv"
        app:layout_constraintTop_toBottomOf="@+id/summary_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:src="@mipmap/apnet"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_height="wrap_content"></ImageView>

    <TextView
        android:id="@+id/sure_tv"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dp_30"
        android:text="确认指示灯在快闪"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/shape_voice_btn"
        android:layout_marginStart="@dimen/dp_200"
        android:layout_marginEnd="@dimen/dp_200"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="wrap_content"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
