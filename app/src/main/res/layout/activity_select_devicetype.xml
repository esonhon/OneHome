<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:src="@drawable/miuisupport_action_bar_back_normal_dark"
            android:layout_height="@dimen/dp_30"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="选择遥控设备类型"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/divider_bg"
        android:layout_height="0.5dp"></View>

    <GridView
        android:id="@+id/type_gv"
        android:layout_width="match_parent"
        tools:listitem="@layout/gvitem_devicetype"
        android:verticalSpacing="@dimen/dp_8"
        android:numColumns="2"
        android:layout_height="match_parent"></GridView>
</LinearLayout>
