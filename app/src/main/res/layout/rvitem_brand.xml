<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="brandBean"
            type="com.dream.onehome.bean.BrandBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/brandName_tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="创维"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"></TextView>

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:src="@drawable/ty_hb_next_icon"
            android:layout_alignParentRight="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/brandName_tv"
            app:layout_constraintBottom_toBottomOf="@+id/brandName_tv"
            android:layout_height="@dimen/dp_15"></ImageView>

        <View
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandName_tv"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/default_bg"
            android:layout_height="0.5dp"></View>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
