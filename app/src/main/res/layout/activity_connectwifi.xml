<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_15"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/dp_30"
            android:src="@drawable/miuisupport_action_bar_back_normal_light"
            android:layout_height="@dimen/dp_30"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="连接设备"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_17"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divider_bg"
        app:layout_constraintTop_toBottomOf="@+id/action_bar"
        ></View>

    <TextView
        android:id="@+id/connect_tv"
        android:layout_width="wrap_content"
        android:text="正在连接"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_95"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/summary_tv"
        android:textSize="@dimen/sp_23"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/summary_tv"
        android:layout_width="wrap_content"
        android:text="路由器、手机和设备尽量靠近"
        app:layout_constraintBottom_toTopOf="@+id/circle_pro"
        app:layout_constraintLeft_toLeftOf="@+id/connect_tv"
        android:textSize="@dimen/sp_16"
        android:layout_marginBottom="@dimen/dp_35"
        android:textColor="@color/color666"
        android:layout_height="wrap_content"></TextView>

    <com.dream.onehome.customview.CircularProgressView
        android:id="@+id/circle_pro"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:padding="10dp"
        app:backColor="@color/default_circleprogress"
        app:backWidth="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:progColor="@color/color_summbg"
        app:progWidth="8dp"
        app:progress="30" />

    <TextView
        android:id="@+id/progress_tv"
        app:layout_constraintTop_toTopOf="@+id/circle_pro"
        app:layout_constraintLeft_toLeftOf="@+id/circle_pro"
        app:layout_constraintRight_toRightOf="@+id/circle_pro"
        app:layout_constraintBottom_toBottomOf="@+id/circle_pro"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/black"
        android:text="30%"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:id="@+id/step_lay1"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/step_lay2"
        app:layout_constraintLeft_toLeftOf="@+id/step_lay2"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:background="@drawable/shape_circle_stroke_gray"
            android:layout_height="@dimen/dp_10">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="找到设备"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/step_lay2"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/step_lay3"
        app:layout_constraintLeft_toLeftOf="@+id/step_lay3"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:background="@drawable/shape_circle_stroke_gray"
            android:layout_height="@dimen/dp_10">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="设备注册到云智能"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/step_lay3"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:background="@drawable/shape_circle_stroke_gray"
            android:layout_height="@dimen/dp_10">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="设备初始化"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
